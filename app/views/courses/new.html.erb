<div class="container">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-body">
        <div class="container-fluid">
          <%= form_tag courses_path do %>
            <table class="table">
              <h1>Create New Course</h1>
              <div class="form-inline">
                <div class="form-group">
                  <tr>
                    <td><%= label :course, :name, 'Name: ' %></td>
                    <td><%= text_field :course, 'name', class: "form-control"%></td>
                  </tr>
                </div>
                <div class="form-group"></div>
                  <tr>
                    <td><%= label :course, :course_number, 'Course Number: ' %></td>
                    <td><%= text_field :course, 'course_number', class: "form-control"%></td>
                  </tr>
                </div>
                <div class="form-group"></div>
                  <tr>
                    <td><%= label :course, :year_restrictions, 'Year Restrictions: ' %></td>
                    <td><%= text_field :course, 'year_restrictions', class: "form-control" %></td>
                  </tr>
                </div>
                <div class="form-group"></div>
                  <tr>
                    <td><%= label :course, :descrition, 'Description: ' %></td>
                    <td><%= text_area :course, 'description', :rows => '5', :cols => '100', class: "form-control" %></td>
                  </tr>
                </div>
                <div class="form-group"></div>
                  <tr>
                    <td><%= label :course, :semester_hours, 'Semester Hours: ' %></td>
                    <td><%= text_field :course, 'semester_hours', class: "form-control" %></td>
                  </tr>
                </div>
              </div>
            </table>
            <%= submit_tag 'Save Course', :class => 'btn btn-success'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>