<h2>Details about <%= @course.name%></h2>
<ul id="details">
  <li>
    Course Number:
    <%= @course.course_number %>
  </li>
  
  <li>
    Semester Hours:  
    <%= @course.semester_hours %>  
  </li> 
  
  <li>
    Year Restrictions:  
    <%= @course.year_restrictions %>  
  </li>   
</ul>
<h3>Description:</h3>
<p id="description">
  <%= @course.description %>
</p>
<% if @current_user.role != "Student" %>
<%= link_to 'Edit Course', edit_course_path(@course) %>
<% end %>
<%= link_to 'Back to Course List',  courses_path %>
<%= button_to 'Assignments', assignments_home_path(courseId: @course.id), method: :post%>
<%= button_to 'Enroll in this Course', enroll_path(courseId: @course.id), method: :post%>