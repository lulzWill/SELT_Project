<%if(@course && @current_user)%>
    <div class ="container-fluid">
        <h1>Assignments</h1>
        <%if(@current_user.role == "Teacher")%>
            <table class="table table-striped .table-responsive" >
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Total</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(@assignments != nil) %>
                    
                        <% @assignments.each do |assignment|%>
                            <tr>
                                <td><%=assignment.name%></td>
                                <% if(assignment.points == nil) %>
                                    <td>--</td>
                                <%else%>
                                    <td><%=assignment.points%></td>
                                <%end%>
                                <td><%= button_to 'Edit Assignment'%></td>
                                <td><%= button_to 'View Grades'%></td>
                            </tr>
                        <% end %>
                    <% else %>
                        <tr>
                            <td>No Assignments</td>
                            <td></td>
                            <td></td>
                        </tr>
                    <% end%>
                    <tr>
                        <%= form_tag(assignments_home_path) do %>
                            <td><%= text_field_tag(:name)%></td>
                            <td><%= number_field_tag(:points)%></td>
                            <td><%= submit_tag("Create Assignment")%></td>
                        <% end %>
                            <td></td>
                    </tr>
                </tbody>
            </table>
        <%end%>
    </div>
<%end%>